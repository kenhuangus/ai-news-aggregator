{
  "name": "ai-news-aggregator-frontend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "prebuild": "node -e \"const fs=require('fs'),p=require('path'),d='../web/data',b='../.data-backup';if(fs.existsSync(d)){fs.cpSync(d,b,{recursive:true});console.log('Backed up web/data')}\"",
    "build": "vite build",
    "postbuild": "node -e \"const fs=require('fs'),p=require('path'),d='../web/data',b='../.data-backup';if(fs.existsSync(b)){fs.cpSync(b,d,{recursive:true});fs.rmSync(b,{recursive:true});console.log('Restored web/data')}\"",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch"
  },
  "devDependencies": {
    "@sveltejs/adapter-static": "^3.0.0",
    "@sveltejs/kit": "^2.0.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@types/dompurify": "^3.0.0",
    "@types/lunr": "^2.3.7",
    "autoprefixer": "^10.4.20",
    "jsdom": "^27.4.0",
    "postcss": "^8.4.49",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.0.0",
    "vite": "^6.4.1"
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "date-fns": "^4.1.0",
    "dompurify": "^3.0.0",
    "lunr": "^2.3.9"
  }
}
